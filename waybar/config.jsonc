{
	"spacing": 0,
	"layer": "top",
	"margin-top": 5,
	"margin-left": 5,
	"margin-right": 5,
	"modules-left": [
      "custom/space",
		"hyprland/workspaces",
		"hyprland/window"
	],
	"modules-center": [
		"custom/spotify",
		"custom/recorder",
	],
	"modules-right": [
		"cpu",
		"custom/sep",
		"memory",
		"custom/sep",
		"pulseaudio",
      "custom/sep",
      "network",
		"custom/sep",
		"clock",
		"custom/sep",
		"tray",
		"custom/sep",
		"custom/session",
	],
	"custom/sep": {
		"format": "|",
      "tooltip": false
	},
	"custom/space": {
		"format": "  "
	},
	"hyprland/window": {
		"format": "  {}",
		"max-length": 50,
		"separate-outputs": true
	},
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "ÔÅÆ ",
			"deactivated": "ÔÅ∞ "
		}
	},
	"custom/recorder": {
		"format": "‚≠ï",
		"return-type": "json",
		"interval": 1,
		"exec": "echo '{\"class\": \"recording\"}'",
		"exec-if": "pgrep wf-recorder",
		"tooltip": false,
		"on-click": "killall -s SIGINT wf-recorder"
	},
	"custom/notification": {
		"tooltip": true,
		"format": " {icon} ",
		"format-icons": {
			"notification": "ÔÉ≥",
			"none": "ÔÇ¢",
			"dnd-notification": "Ôá∂",
			"dnd-none": "Ôá∑"
		},
		"return-type": "json",
		"exec-if": "which swaync-client", "exec": "swaync-client -swb",
		"on-click": "swaync-client -t -sw",
		"on-click-right": "swaync-client -d -sw",
		"escape": true
	},
	"custom/session": {
		"format": "{icon}",
		"format-icons": {
			"default": "üíÄ  "
		},
		"toolip": false,
		"on-click": "wlogout -p layer-shell"
	},
	"hyprland/workspaces": {
		"disable-scroll": true,
		"all-outputs": true,
		"on-click": "activate",
		"format": "{icon}",
		"format-icons": {
			"1": "I",
			"2": "II",
			"3": "III",
			"4": "IV",
			"5": "V",
			"6": "VI",
			"7": "VII",
			"8": "VIII",
			"9": "IX",
			"urgent": "!"
		}
	},
	"tray": {
		"spacing": 10
	},
	"clock": {
		"format": "{:%a %H:%M}",
		"interval": 60,
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
	},
	"cpu": {
		"format": "Ôíº {usage}%",
		"interval": 5,
		"tooltip": false
	},
	"memory": {
    	"interval": 5,
      "format": "Ôë≤ {used:0.1f}G",
      "tooltip": false
	},
	"custom/power_profile": {
		"exec": "sleep 0.3 && /home/adharsh/.scripts/powerprofilecycle.sh -m",
		"interval": 1,
		"on-click": "/home/adharsh/.scripts/powerprofilecycle.sh",
		"exec-on-event": true
	},
	"network": {
		"format-wifi": "Ôá´  {essid}",
		"format-ethernet": "Û∞àÄ wired",
		"format-disconnected": "ÔÑß disconnected",
		"tooltip-format-wifi": "Ôá´ {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\n‚¨ÜÔ∏è {bandwidthUpBits} ‚¨áÔ∏è {bandwidthDownBits}",
		"tooltip-format-ethernet": "Û∞àÄ {ifname}\nIP: {ipaddr}\n‚¨ÜÔ∏è {bandwidthUpBits} ‚¨áÔ∏è {bandwidthDownBits}",
		"format-linked": "{ifname} (No IP) Ôûñ",
		"on-click-right": "nm-connection-editor"
	},
	"pulseaudio": {
		"format": "{icon} {volume}",
		"format-bluetooth": "{volume}% {icon} Ôäî",
		"format-bluetooth-muted": "Ôë¶ Ôäî",
		"format-muted": "Ôë¶ ",
		"format-source": "ÔÑ∞",
		"format-source-muted": "ÔÑ±",
		"format-icons": {
			"headphone": "ÔÄ•",
			"headset": "ÔÄ•",
			"phone": "ÔÇï",
			"portable": "ÔÇï",
			"car": "ÔÜπ",
			"default": [
				"ÔÄ¶",
				"ÔÄß",
				"ÔÄ®"
			]
		},
		"on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
		"on-click-right": "pavucontrol"
	},
   "custom/pacman-update-icon": {
      "format": " Û∞èî "
   },
   "custom/pacman-update": {
      "format": " {}",
      "interval": 3600,
      "exec": "$HOME/.config/waybar/.scripts/checkupdates | wc -l",
      "signal": 8
   },
	"custom/spotify": {
      "exec": "~/.config/waybar/.scripts/mediaplayer.py --player spotify",
      "format": "{} ÔÄÅ ",
      "return-type": "json",
      "on-click": "playerctl -p spotify play-pause",
      "on-scroll-up": "playerctl -p spotify next",
      "on-scroll-down": "playerctl -p spotify previous"
	}
}
